<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.youtube.player.YouTubeThumbnailView
        android:id="@+id/iv_item_main_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.72"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_main_model"/>

    <TextView
        android:id="@+id/tv_name_list_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_item_main_video"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/l_p_tr_nh_android_a_z_khoa_ph_m"
        android:textColor="@color/black"
        android:textSize="@dimen/dp14"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp8"/>

    <ImageView
        android:id="@+id/iv_menu_list_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_name_list_search"
        app:layout_constraintLeft_toRightOf="@id/tv_name_list_search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:src="@drawable/ic_menu_vertical_item_main"/>

    <TextView
        android:id="@+id/tv_name_channel_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name_list_search"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_list_search"
        android:text="Ngô ngọc diệp"
        android:textSize="@dimen/dp12"
        android:textColor="@color/colorCCC"/>

    <TextView
        android:id="@+id/tv_number_video_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name_channel_list"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_channel_list"
        android:textColor="@color/colorCCC"
        android:textSize="@dimen/dp12"
        android:text="@string/_194_video"/>

</androidx.constraintlayout.widget.ConstraintLayout>